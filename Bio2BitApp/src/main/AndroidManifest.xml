<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.st.bio2bit">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.st.bio2bit.uicontroller.activities.ScanDeviceActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.st.bio2bit.uicontroller.activities.DataActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.st.bio2bit.uicontroller.activities.ScanDeviceActivity" />
        </activity>
        <service
            android:name="com.st.bio2bit.controller.CommunicationService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name="com.st.bio2bit.controller.LogService"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>
